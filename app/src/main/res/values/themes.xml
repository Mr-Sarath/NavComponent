<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavComponent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!--ROUND IMAGE-->
    <style name="roundedImageView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--CARD STYLE-->

    <style name="CardStyle">
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

    <!--FONTS-->

    <style name="extraLargeTextBold">
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--CARD CIRCLE-->
    <style name="CornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

